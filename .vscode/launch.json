{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "hostname": "172.18.0.1",
            "port": 9003,
            "log": true,
            "pathMappings": {
                "/var/www/html/": "${workspaceFolder}/src/",
            },
            "xdebugSettings": {
                "max_children": 9999,
                "show_hidden": 1
            }
        }
    ]
}